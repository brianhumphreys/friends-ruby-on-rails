<div class="card sign-up-card" style="width: 18rem;">
  <%# <img src="..." class="card-img-top" alt="..."> %>
  <div class="card-header test">
    Forgot your password?
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%#<% render 'layouts/resource_errors', resource: resource %>

      <div class="field field-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Email" %>
        <br/>
      </div>

      <div class="actions">
        <%= f.submit "Send reset password link", class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
  <div class="card-body">
    <%= render "devise/shared/links" %>
  </div>
</div>