
<h1>Friends List</h1>

<table class="table table-success table-striped table-hover">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend|%>
      <% if friend.user == current_user%>
        <%= render friend %>
      <% end %>
    <% end %>
  </tbody>
</table>

